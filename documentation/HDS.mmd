graph TD
    subgraph "User Domain"
        User(fa:fa-user User)
    end

    subgraph "Frontend System"
        style Frontend fill:#dff,stroke:#333,stroke-width:2px
        Frontend[React Web Application]
    end

    subgraph "Backend System (Python)"
        style Backend fill:#fdf,stroke:#333,stroke-width:2px
        API[API Service - Flask]
        Engine[Analysis Engine]
        Storage[(Temporary File Storage)]
        Linter{{cfn-lint Library}}
    end

    User -- "Interacts via Browser" --> Frontend
    
    Frontend -- "1. Uploads Template [HTTP POST]" --> API
    
    API -- "2. Persists template for analysis" --> Storage
    API -- "3. Initiates scan" --> Engine
    
    Engine -- "4. Leverages for core logic" --> Linter
    
    Engine -- "5. Returns structured findings" --> API
    API -- "6. Cleans up temporary file" --> Storage
    
    API -- "7. Sends Report [JSON]" --> Frontend
    
    Frontend -- "Displays Results" --> User
